{
  "name": "chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for improved referencing in GitHub",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "sass --load-path=node_modules/ src/styles/index.scss:dist/css/index.css",
    "scss-watch": "sass --watch --load-path=node_modules/ src/styles/index.scss:dist/css/index.css",
    "build": "parcel build src/scripts/{background.js,popup.js,content.js} src/templates/* src/manifest.json && npm run scss"
  },
  "private": "true",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@primer/css": "^19.0.0",
    "@primer/primitives": "^7.1.0",
    "webdriverio": "^7.16.8"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "parcel": "^2.0.1"
  },
  "@parcel/transformer-js": {
    "inlineEnvironment": true,
    "inlineFS": true
  }
}
