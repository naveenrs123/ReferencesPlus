{
  "name": "chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for improved referencing in GitHub",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "sass --load-path=node_modules/ src/styles/index.scss:dist/css/index.css",
    "scss-watch": "sass --watch --load-path=node_modules/ src/styles/index.scss:dist/css/index.css",
    "package-extension": "rollup -c",
    "package-extension-watch": "rollup -c -w",
    "build": "npm run package-extension && npm run scss"
  },
  "private": "true",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@primer/css": "^18.0.1",
    "@primer/primitives": "^5.1.0",
    "date-fns": "^2.16.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.36.2",
    "rollup-plugin-chrome-extension": "^3.6.5",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2"
  }
}
