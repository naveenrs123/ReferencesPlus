{
  "name": "chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for improved referencing in GitHub",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "sass --load-path=node_modules/ src/styles/index.scss:dist/css/index.css",
    "scss-watch": "sass --watch --load-path=node_modules/ src/styles/index.scss:dist/css/index.css",
    "package-extension": "rollup -c",
    "package-extension-watch": "rollup -c -w",
    "build": "npm run package-extension && npm run scss"
  },
  "private": "true",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@primer/css": "^19.0.0",
    "@primer/primitives": "^7.1.0",
    "webdriverio": "^7.16.8"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "parcel": "^2.0.1",
    "rollup": "^2.60.0",
    "rollup-plugin-chrome-extension": "^3.6.5",
    "rollup-plugin-polyfill-node": "^0.7.0"
  }
}
